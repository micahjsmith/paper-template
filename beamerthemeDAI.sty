% Choose color mode
% \selectcolormodel{cmyk} % use this for high-quality printing
\selectcolormodel{rgb} % use this otherwise

\mode<presentation>

\RequirePackage{mitcolors}
\RequirePackage{setspace}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{headline}{fg=black, bg=white}
\setbeamercolor{footline}{fg=black, bg=white}
\setbeamerfont{footline}{size=\large,series=\tt}
\setbeamercolor{separation line}{bg=mitred}
\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=black}
\setbeamercolor{institute in headline}{fg=black}
\setbeamercolor{author in head/foot}{fg=mitred, bg=white}
\setbeamercolor{title in head/foot}{fg=mitred, bg=white}
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry journal}{fg=mitdarkgrey}
\setbeamercolor{bibliography entry note}{fg=mitdarkgrey}
\setbeamercolor{bibliography entry location}{fg=mitdarkgrey}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{fg=black, bg=white}
\setbeamercolor*{block title}{fg=mitred, bg=white}
\setbeamerfont{block title}{size=\LARGE,series=\bfseries}
\setbeamercolor{upper separation line head}{fg=mitred}

%\setbeamercolor{alerted text}{fg=mitred}

%\setbeamercolor{example text}{fg=mitdarkgray}
\setbeamercolor{structure}{fg=mitred}

\setbeamertemplate{itemize items}[triangle]
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster
\setbeamertemplate{bibliography item}{\insertbiblabel}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip2ex
  \begin{beamercolorbox}[ht=3.5ex,dp=0.5ex,center,leftskip=-1em,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}%
    {\phantom{Gg}\insertblocktitle}% phantom because of baseline problem
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[leftskip=1em,colsep*=.75ex,sep=0.5ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  \setbeamertemplate{block end}{
%   \centering
%   \color{mitlightgrey}\rule{0.3\columnwidth}{3pt}
  \vskip2ex
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% logo path
\def\@logopath{None}
\newcommand{\setlogo}[1]{\def\@logopath{#1}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.8\paperwidth}
        \vskip4em\setstretch{1.5}
        %\raggedleft
        \centering
        \usebeamercolor{title in headline}{\setstretch{2.0}\color{fg}\textbf{\veryHuge{\inserttitle}}\\[0.75ex]}
        \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[0.5ex]}
        \usebeamercolor{institute in headline}{\color{fg}\Large{\insertinstitute}}
      \end{column}
      \begin{column}{.20\paperwidth}
        \vskip14ex
        \begin{center}
          \includegraphics[width=.60\linewidth]{\@logopath}
        \end{center}
        \vskip2ex
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip8ex
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{10pt}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% url
\def\@authorurl{None}
\newcommand{\setauthorurl}[1]{\def\@authorurl{#1}}
% email
\def\@authoremail{None}
\newcommand{\setauthoremail}[1]{\def\@authoremail{#1}}


\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{3pt}
  \end{beamercolorbox}

  \leavevmode%
  \begin{beamercolorbox}[ht=8ex,leftskip=1em,rightskip=1em]{author in head/foot}%
    {\large \texttt{\@authorurl}}
    \hfill
    {\large \texttt{\@authoremail}}
    \vskip2.5ex
  \end{beamercolorbox}
  \vskip0pt%
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{3pt}
  \end{beamercolorbox}
}

