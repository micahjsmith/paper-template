\ProvidesPackage{mscommon}

% algorithm2e setup
\RequirePackage{algorithm2e}

\newcommand\myalgocommentstyle[1]{\footnotesize\sffamily{#1}}
\RestyleAlgo{boxed}
\SetAlgoNoEnd
\SetCommentSty{myalgocommentstyle}
\SetAlCapSkip{1ex}
\DontPrintSemicolon

% minted setup
\RequirePackage{minted}
\RequirePackage{textcomp}  % for upquote
\setminted{
  fontsize=\scriptsize,
  frame=single,
  linenos=false,
  escapeinside={@\{}{\}@},
  breaklines=true,
}
\setminted[python]{
	breakafter={(},
	breakaftersymbolpre={},
	breakindentnchars=4,
}

\RequirePackage{varioref}
\RequirePackage{hyperref}
\RequirePackage[capitalise]{cleveref}
\hypersetup{
    colorlinks=true,
    linktoc=all,
    linktocpage=true,
    linkcolor=blue,
    citecolor=blue
}

% math setup
\DeclareMathOperator*{\argmax}{arg\,max}
\DeclareMathOperator*{\argmin}{arg\,min}
\DeclareMathOperator{\E}{\mathbb{E}}
\newcommand{\R}{\mathbb{R}}

\newtheorem{definition}{Definition}
